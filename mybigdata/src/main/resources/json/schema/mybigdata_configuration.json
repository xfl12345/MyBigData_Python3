{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/xfl12345/MyBigData_Python3/blob/main/mybigdata/src/main/resources/json/schema/mybigdata_configuration.json",
    "title": "mybigdata_configuration",
    "description": "mybigdata配置",
    "type": "object",
    "properties": {
        "core": {
            "description": "核心配置",
            "type": "object",
            "properties": {
                "table_name": {
                    "description": "JSON Schema 模板名称",
                    "type": "object",
                    "properties": {
                        "string_type": {
                            "description": "字符串记录表",
                            "type": "string"
                        },
                        "number_type": {
                            "description": "数字记录表",
                            "type": "string"
                        },
                        "array_type": {
                            "description": "组记录表",
                            "type": "string"
                        },
                        "boolean_type": {
                            "description": "布尔值记录表",
                            "type": "string"
                        }
                    },
                    "required": [
                        "string_type"
                    ]
                }
            },
            "required": [
                "table_name"
            ]
        },
        "additions": {
            "description": "附加配置",
            "type": "object"
        }
    },
    "required": [
        "core"
    ]
}